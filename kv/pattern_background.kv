    canvas.before:
        Color:
            rgba: 221/255, 83/255, 64/255, 1  # Rojo
        Rectangle:
            pos: self.pos
            size: self.size

    # Repetimos emojis con etiquetas
    GridLayout:
        cols: 20
        rows: 35
        spacing: 5
        padding: 10
        size_hint: 1, 1
