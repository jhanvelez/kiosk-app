<PairingScreen>:
    MDLabel:
        text: "Emparejar Kiosko"
        halign: "center"
        pos_hint: {"center_y": 0.85}
        font_style: "H4"

    MDIcon:
        icon: "tablet"
        halign: "center"
        pos_hint: {"center_y": 0.75}
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1  # Blanco

    MDTextField:
        id: code_input
        hint_text: "CÃ³digo de emparejamiento"
        pos_hint: {"center_x": 0.5, "center_y": 0.65}
