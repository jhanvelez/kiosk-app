<AdScreen>:
    name: "ads"

    FloatLayout:
        PatternBackground:
            size: root.size
            pos: root.pos

        Image:
            id: ad_container
            size_hint: 0.9, 0.9
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            allow_stretch: True
            keep_ratio: False
            # si quieres, puedes agregar un borde con canvas
            canvas.before:
                Color:
                    rgba: 1,1,1,0.08
                Rectangle:
                    pos: self.pos
                    size: self.size
