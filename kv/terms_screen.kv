<TermsScreen>:
    name: "terms"

    FloatLayout:
        PatternBackground:
            size: root.size
            pos: root.pos

        MDCard:
            orientation: "vertical"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            radius: [24,24,24,24]
            size_hint: 0.9, 0.9
            padding: 80

            BoxLayout:
                orientation: "vertical"

                MDLabel:
                    text: "Permiso y Términos"
                    halign: "center"
                    font_style: "H5"

                ScrollView:
                    do_scroll_x: False
                    MDLabel:
                        text: "Al continuar, aceptas grabar un video de 15 segundos y nuestras políticas de privacidad. [color=#FFD54F][u]Ver políticas completas[/u][/color]"
                        markup: True
                        text_size: self.width, None
                        size_hint_y: None
                        height: self.texture_size[1]

                BoxLayout:
                    size_hint_y: None
                    height: "48dp"
                    spacing: 12

                    MDRaisedButton:
                        text: "Aceptar y Grabar"
                        on_release: root.accept()

                    MDFlatButton:
                        text: "No Acepto"
                        on_release: root.decline()
