<TermsScreen>:
    name: "terms"

    FloatLayout:
        PatternBackground:
            size: root.size
            pos: root.pos

        MDCard:
            orientation: "vertical"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            radius: [24,24,24,24]
            size_hint: 0.9, 0.7   # menos alto para que quede al centro
            padding: dp(30)
            spacing: dp(20)

            BoxLayout:
                orientation: "vertical"
                size_hint_y: 1
                spacing: dp(15)
                pos_hint: {"center_y": 0.5}  # centra todo el contenido

                MDLabel:
                    text: "Permiso y Términos"
                    halign: "center"
                    font_style: "H5"
                    size_hint_y: None
                    height: self.texture_size[1] + dp(10)

                ScrollView:
                    do_scroll_x: False
                    size_hint_y: None
                    height: dp(150)   # altura fija para no alargar todo
                    bar_width: dp(6)

                    MDLabel:
                        text: "Al continuar, aceptas grabar un video de 15 segundos y nuestras políticas de privacidad. [color=#FFD54F][u]Ver políticas completas[/u][/color]"
                        markup: True
                        text_size: self.width, None
                        size_hint_y: None
                        height: self.texture_size[1]
                        halign: "center"

                BoxLayout:
                    size_hint_y: None
                    height: dp(60)
                    spacing: dp(20)
                    padding: dp(10)

                    MDRaisedButton:
                        text: "Aceptar y Grabar"
                        font_size: "18sp"
                        size_hint: 0.6, None
                        height: dp(50)
                        on_release: root.accept()

                    MDFlatButton:
                        text: "No Acepto"
                        font_size: "18sp"
                        size_hint: 0.4, None
                        height: dp(50)
                        on_release: root.decline()
